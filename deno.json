{
  "tasks": {
    "dev": "deno run -A --watch src/main.ts",
    "db:studio": "deno run -A --node-modules-dir npm:drizzle-kit studio",
    "db:migrations:generate": "deno run -A --node-modules-dir npm:drizzle-kit generate",
    "db:migrations:execute": "deno run -A --node-modules-dir npm:drizzle-kit migrate",
    "db:schema:pull": "deno run -A --node-modules-dir npm:drizzle-kit pull",
    "db:schema:push": "deno run -A --node-modules-dir npm:drizzle-kit push",
    "container:start": "docker compose up -d",
    "container:stop": "docker compose down",
    "container:restart": "deno task container:stop && deno task container:start",
    "container:login": "docker compose exec -it backend bash",
    "container:logs": "docker compose logs -f backend"
  },
  "imports": {
    "@denorid/logger": "jsr:@denorid/logger@^0.2.0",
    "@neonbyte/libsodium": "jsr:@neonbyte/libsodium@^0.1.2",
    "@quentinadam/zip": "jsr:@quentinadam/zip@^0.1.8",
    "@std/encoding": "jsr:@std/encoding@^1.0.10",
    "@std/http": "jsr:@std/http@^1.0.21",
    "@std/path": "jsr:@std/path@^1.1.2",
    "@types/pg": "npm:@types/pg@^8.15.6",
    "drizzle-kit": "npm:drizzle-kit@^0.31.6",
    "drizzle-orm": "npm:drizzle-orm@^0.44.7",
    "hono": "jsr:@hono/hono@^4.10.4",
    "@std/assert": "jsr:@std/assert@^1.0.15",
    "pg": "npm:pg@^8.16.3",
    "zod": "npm:zod@^4.1.12"
  },
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "hono/jsx"
  }
}
